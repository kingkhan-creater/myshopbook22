rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User profile (FINAL)
    match /users/{userId} {
      allow read, write: if request.auth != null
        && request.auth.uid == userId;
    }

    // Generic rule for all user-owned collections (items, customers, bills, etc.)
    match /users/{userId}/{collection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for bill subcollections (items, payments)
    match /users/{userId}/bills/{billId}/{subcollection}/{subDocId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow creating documents only if the parent bill is OPEN
      allow create: if request.auth != null && request.auth.uid == userId
                    && get(/databases/$(database)/documents/users/$(userId)/bills/$(billId)).data.status == 'OPEN';
      // Disallow updates and deletes to preserve history
      allow update, delete: if false;
    }


    // Public user profiles for discovery
    match /publicUsers/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Friendships: Users in the `userIds` array can read. Creation and updates
    // are also restricted to participants.
    match /friendships/{friendshipId} {
      allow read, update: if request.auth.uid in resource.data.users;
      allow create: if request.auth.uid in request.resource.data.users;
      allow delete: if false;
    }

    // --- Chat System Rules ---

    // Chat Metadata: Only chat participants can access the chat document.
    match /chats/{chatId} {
      allow read, create, update: if request.auth.uid in resource.data.members;
    }

    // Messages: Only chat participants can read messages. A user can only create a
    // message as themselves. Messages are immutable (cannot be updated or deleted).
    match /chats/{chatId}/messages/{messageId} {
      allow read: if get(/databases/$(database)/documents/chats/$(chatId)).data.members.hasAny([request.auth.uid]);
      allow create: if request.auth.uid == request.resource.data.senderId
                    && get(/databases/$(database)/documents/chats/$(chatId)).data.members.hasAny([request.auth.uid]);
      allow update, delete: if false; // Ensures message history is preserved.
    }
  }
}
