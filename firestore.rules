rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function billDoc(userId, billId) {
      return get(/databases/$(database)/documents/users/$(userId)/bills/$(billId));
    }

    /* ================= USERS ================= */
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/{collection}/{docId} {
      allow read, write: if isOwner(userId);
    }

    /* ================= PUBLIC USERS ================= */
    // Public profiles must be readable by all authenticated users for discovery/search
    match /publicUsers/{userId} {
      allow read: if isAuth();
      allow write: if isOwner(userId);
    }

    /* ================= BILLS ================= */
    match /users/{userId}/bills/{billId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId)
        && resource.data.status == 'OPEN';
      allow delete: if false;
    }

    match /users/{userId}/bills/{billId}/{sub}/{docId} {
      allow read: if isOwner(userId);
      allow create, update: if isOwner(userId)
        && billDoc(userId, billId).data.status == 'OPEN';
      allow delete: if false;
    }

    /* ================= POSTS ================= */
    match /posts/{postId} {
      allow read: if isAuth();
      allow create: if isAuth()
        && request.resource.data.userId == request.auth.uid;

      allow update: if isAuth() && (
        // Post author can update anything (text, imageUrl, etc.)
        (resource.data.userId == request.auth.uid)
        ||
        // Others can ONLY update reactionCounts and commentCount (for Liking/Commenting)
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactionCounts', 'commentCount']))
      );

      allow delete: if isAuth() && resource.data.userId == request.auth.uid;
    }

    match /posts/{postId}/reactions/{userId} {
      allow read: if isAuth();
      allow create, update, delete: if isAuth()
        && request.auth.uid == userId;
    }

    match /posts/{postId}/comments/{commentId} {
      allow read: if isAuth();
      allow create: if isAuth()
        && request.resource.data.userId == request.auth.uid;
      
      allow update: if isAuth() && (
        // Only comment owner can edit the text or metadata
        (resource.data.userId == request.auth.uid && request.resource.data.diff(resource.data).affectedKeys().hasAny(['text', 'updatedAt', 'isEdited']))
        ||
        // Anyone can update the likeCount if comment likes are implemented
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount']))
      );

      allow delete: if isAuth() && (
        // Comment owner can delete
        resource.data.userId == request.auth.uid || 
        // Post owner can delete any comment on their post
        get(/databases/$(database)/documents/posts/$(postId)).data.userId == request.auth.uid
      );
    }

    match /posts/{postId}/comments/{commentId}/likes/{userId} {
      allow read: if isAuth();
      allow create, update, delete: if isAuth() && request.auth.uid == userId;
    }

    /* ================= STORIES ================= */
    match /stories/{storyId} {
      allow read: if isAuth();
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuth() && (
        (resource.data.userId == request.auth.uid) // Owner can update everything
        ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewerIds'])) // Others can only record views
      );
      allow delete: if isAuth() && resource.data.userId == request.auth.uid;
    }

    /* ================= MARKETPLACE ================= */
    match /marketplace/{itemId} {
      allow read: if isAuth();
      allow create: if isAuth() && request.resource.data.sellerId == request.auth.uid;
      allow update: if isAuth() && resource.data.sellerId == request.auth.uid;
      allow delete: if isAuth() && resource.data.sellerId == request.auth.uid;
    }

    /* ================= FRIENDS ================= */
    match /friendships/{id} {
      // Allow reading if document doesn't exist (existence check), or if participant, or if accepted
      allow read: if isAuth() && (
        resource == null
        || request.auth.uid in resource.data.get('users', [])
        || resource.data.get('status', 'pending') == 'accepted'
      );
      allow update: if isAuth() && request.auth.uid in resource.data.get('users', []);
      allow create: if isAuth() && request.auth.uid in request.resource.data.get('users', []);
      allow delete: if false;
    }

    /* ================= CHATS ================= */
    match /chats/{chatId} {
      function isChatMember() {
        return isAuth() && (resource == null || request.auth.uid in resource.data.get('members', []));
      }
      allow read, update: if isChatMember();
      allow create: if isAuth() && request.auth.uid in request.resource.data.get('members', []);
      allow delete: if false;
    }

    match /chats/{chatId}/messages/{messageId} {
      function getChatData() {
        return get(/databases/$(database)/documents/chats/$(chatId)).data;
      }
      
      function isMemberOfParentChat() {
        return isAuth() && request.auth.uid in getChatData().get('members', []);
      }

      allow read: if isMemberOfParentChat() && (resource.data.get('deletedFor', [])).hasAny([request.auth.uid]) == false;
      allow create: if isMemberOfParentChat() && request.resource.data.senderId == request.auth.uid;
      allow update: if isMemberOfParentChat() && (
        // "Delete for me"
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['deletedFor']) &&
          request.resource.data.deletedFor == resource.data.get('deletedFor', []).concat([request.auth.uid])
        )
        ||
        // "Delete for everyone" (Only sender)
        (
          resource.data.senderId == request.auth.uid &&
          request.resource.data.deletedForEveryone == true
        )
      );
      allow delete: if false;
    }
  }
}
