rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function billDoc(userId, billId) {
      return get(/databases/$(database)/documents/users/$(userId)/bills/$(billId));
    }

    /* ================= USERS ================= */
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/{collection}/{docId} {
      allow read, write: if isOwner(userId);
    }

    /* ================= BILLS ================= */
    match /users/{userId}/bills/{billId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId)
        && resource.data.status == 'OPEN';
      allow delete: if false;
    }

    match /users/{userId}/bills/{billId}/{sub}/{docId} {
      allow read: if isOwner(userId);
      allow create, update: if isOwner(userId)
        && billDoc(userId, billId).data.status == 'OPEN';
      allow delete: if false;
    }

    /* ================= POSTS ================= */
    match /posts/{postId} {
      allow read: if isAuth();
      allow create: if isAuth()
        && request.resource.data.userId == request.auth.uid;

      allow update: if isAuth()
        && resource.data.userId == request.auth.uid;

      allow delete: if false; // soft delete only
    }

    match /posts/{postId}/likes/{userId} {
      allow read: if isAuth();
      allow create, delete: if isAuth()
        && request.auth.uid == userId;
    }

    match /posts/{postId}/comments/{commentId} {
      allow read: if isAuth();
      allow create: if isAuth()
        && request.resource.data.userId == request.auth.uid;
      allow update: if isAuth()
        && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }

    /* ================= FRIENDS ================= */
    match /friendships/{id} {
      allow read, update: if request.auth.uid in resource.data.users;
      allow create: if request.auth.uid in request.resource.data.users;
      allow delete: if false;
    }

    /* ================= CHATS ================= */
    match /chats/{chatId} {
      function isMember() {
        return request.auth != null && request.auth.uid in resource.data.members;
      }
      allow read, update: if isMember();
      allow create: if request.auth != null && request.auth.uid in request.resource.data.members;
      allow delete: if false;
    }

    match /chats/{chatId}/messages/{messageId} {
      function isMemberOfParentChat() {
        return request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId), {data: {members: []}}).data.members;
      }

      allow read: if isMemberOfParentChat() && (resource.data.get('deletedFor', [])).hasAny([request.auth.uid]) == false;
      
      allow create: if isMemberOfParentChat() && request.resource.data.senderId == request.auth.uid;

      allow update: if isMemberOfParentChat() && (
        // "Delete for me"
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['deletedFor']) &&
          request.resource.data.deletedFor == resource.data.get('deletedFor', []).concat([request.auth.uid])
        )
        ||
        // "Delete for everyone"
        (
          resource.data.senderId == request.auth.uid &&
          request.resource.data.deletedForEveryone == true &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'deletedForEveryone', 'deletedAt', 'text', 'imageUrl', 'itemSnapshot', 'originalText', 'originalImageUrl', 'originalItemSnapshot'
          ])
        )
      );

      allow delete: if false;
    }
  }
}
