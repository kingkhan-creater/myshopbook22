rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function isUserOwner(userId) {
      let userData = get(/databases/$(database)/documents/users/$(userId)).data;
      // Default to 'STAFF' if role doesn't exist to be safe. Only explicit 'OWNER' is owner.
      return userData != null && userData.get('role', 'STAFF') == 'OWNER';
    }

    function billDoc(userId, billId) {
      return get(/databases/$(database)/documents/users/$(userId)/bills/$(billId));
    }

    /* ================= USERS ================= */
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /publicUsers/{userId} {
      allow read: if isAuth();
      allow write: if isOwner(userId);
    }

    match /users/{userId}/{collection}/{docId} {
      allow read, write: if isOwner(userId);
    }

    /* ================= BILLS ================= */
    match /users/{userId}/bills/{billId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId)
        && resource.data.status == 'OPEN';
      allow delete: if false;
    }

    match /users/{userId}/bills/{billId}/{sub}/{docId} {
      allow read: if isOwner(userId);
      allow create, update: if isOwner(userId)
        && billDoc(userId, billId).data.status == 'OPEN';
      allow delete: if false;
    }

    /* ================= POSTS ================= */
    match /posts/{postId} {
      allow read: if isAuth();
      
      allow create: if isAuth()
        && request.resource.data.userId == request.auth.uid;

      allow update: if isAuth() && (
        ( // Owner can soft-delete their own post
          resource.data.userId == request.auth.uid &&
          request.resource.data.isDeleted == true &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isDeleted'])
        ) ||
        ( // Allow for reaction and comment counts to be updated
          request.resource.data.diff(resource.data).affectedKeys().hasAny(['commentCount', 'reactionCounts'])
        )
      );

      allow delete: if false; // soft delete only
    }

    match /posts/{postId}/reactions/{userId} {
      allow read: if isAuth();
      // Users can create, update, or delete their own reaction document.
      allow write: if isAuth() && request.auth.uid == userId;
    }

    match /posts/{postId}/comments/{commentId} {
      allow read: if isAuth();
      
      allow create: if isAuth()
        && request.resource.data.userId == request.auth.uid;
        
      allow update: if isAuth() && resource.data.userId == request.auth.uid;
      
      allow delete: if isAuth() && resource.data.userId == request.auth.uid;
    }

    /* ================= FRIENDS ================= */
    match /friendships/{id} {
      allow read, update: if request.auth.uid in resource.data.users;
      allow create: if request.auth.uid in request.resource.data.users;
      allow delete: if false;
    }

    /* ================= CHATS ================= */
    match /chats/{chatId} {
      allow read, update: if request.auth != null && request.auth.uid in resource.data.members;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.members;
      allow delete: if false;
    }

    match /chats/{chatId}/messages/{messageId} {
      function isMemberOfParentChat() {
        let chatDoc = get(/databases/$(database)/documents/chats/$(chatId));
        return request.auth != null && chatDoc.data.members.hasAny([request.auth.uid]);
      }

      allow read: if isMemberOfParentChat() && (request.auth.uid in resource.data.get('deletedFor', [])) == false;
      
      allow create: if isMemberOfParentChat() && request.resource.data.senderId == request.auth.uid;

      allow update: if isMemberOfParentChat() && (
        // "Delete for me"
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['deletedFor']) &&
          request.resource.data.deletedFor == resource.data.get('deletedFor', []).concat([request.auth.uid])
        )
        ||
        // "Delete for everyone"
        (
          resource.data.senderId == request.auth.uid &&
          request.resource.data.deletedForEveryone == true &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'deletedForEveryone', 'deletedAt', 'text', 'imageUrl', 'itemSnapshot', 'originalText', 'originalImageUrl', 'originalItemSnapshot'
          ])
        )
      );
      allow delete: if false;
    }
    
    /* ================= STORIES ================= */
    match /stories/{storyId} {
      allow read: if isAuth();
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Stories are immutable
    }

    /* ================= MARKETPLACE ================= */
    match /marketplace/{itemId} {
      allow read: if isAuth();
      allow create: if isAuth() && request.resource.data.sellerId == request.auth.uid;
      allow update: if isAuth()
        && resource.data.sellerId == request.auth.uid
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])
        && isUserOwner(request.auth.uid);
      allow delete: if false; // Use status 'SOLD' instead of deleting
    }
  }
}
